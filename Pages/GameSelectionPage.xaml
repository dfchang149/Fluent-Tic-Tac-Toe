<Page
    x:Class="Fluent_Tic_tac_toe.Pages.GameSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluent_Tic_tac_toe.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    <Grid Padding="24" x:Name="PageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="PageStackPanel">
            <TextBlock Text="Game Settings" HorizontalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16" />
            <ScrollViewer x:Name="Scroller" HorizontalAlignment="Stretch" Margin="0,0,0,48">
                <StackPanel HorizontalAlignment="Stretch" Padding="0,0,0,72" Spacing="4" >
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="True" FromHorizontalOffset="0" FromVerticalOffset="64" />
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>

                    <Expander x:Name="GamemodeExpander" Expanding="GamemodeExanderExpanded" HorizontalAlignment="Stretch" MinHeight="72"
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid Margin="4,16,0,16">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe7fc;" Margin="0,1,16,0" />
                                    <TextBlock  Text="Gamemode"/>
                                </StackPanel>
                                <ComboBox x:Name="GamemodeSelectionBox" SelectionChanged="GamemodeSelected" Width="{Binding ElementName=GamemodeSelectionBox, Path=ActualWidth}" FlowDirection="LeftToRight" HorizontalAlignment="Right" SelectedIndex="0">
                                    <x:String>Singleplayer</x:String>
                                    <x:String>Multiplayer</x:String>
                                    <x:String>Spectator</x:String>
                                </ComboBox>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <Grid>
                                <Grid.ChildrenTransitions>
                                    <TransitionCollection>
                                        <EntranceThemeTransition IsStaggeringEnabled="True" FromHorizontalOffset="0"/>
                                    </TransitionCollection>
                                </Grid.ChildrenTransitions>
                                <Grid x:Name="SingleplayerContent" Padding="4,0,0,0">
                                    <Grid.ChildrenTransitions >
                                        <TransitionCollection>
                                            <EntranceThemeTransition />
                                        </TransitionCollection>
                                    </Grid.ChildrenTransitions>
                                    <Grid.ColumnDefinitions>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe8f0;" Margin="0,0,16,0" />
                                        <TextBlock Text="Difficulty"/>
                                    </StackPanel>
                                    <ComboBox x:Name="DifficultySelectionBox" Width="{Binding ElementName=DifficultySelectionBox, Path=ActualWidth}"
                                        FlowDirection="LeftToRight" HorizontalAlignment="Right" SelectedIndex="1">
                                        <x:String>Easy</x:String>
                                        <x:String>Medium</x:String>
                                        <x:String>Hard</x:String>
                                    </ComboBox> 
                                </Grid>
                                <Grid x:Name="MultiplayerContent" Padding="4,0,0,0">
                                    <Grid.ChildrenTransitions >
                                        <TransitionCollection>
                                            <EntranceThemeTransition />
                                        </TransitionCollection>
                                    </Grid.ChildrenTransitions>
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                                        <SymbolIcon Symbol="People" Margin="0,0,16,0" />
                                        <TextBlock  Text="Number of Players"/>
                                    </StackPanel>
                                    <NumberBox ValueChanged="PlayerBoxChanged" HorizontalAlignment="Right" Width="{Binding Path=ActualWidth}"
                                        Value="2" SpinButtonPlacementMode="Compact" SmallChange="1"
                                        Minimum="2" Maximum="10" />
                                </Grid>
                            </Grid>
                        </Expander.Content>
                    </Expander>
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Height="72"
                          ToolTipService.ToolTip="Displays a timer for how long the match takes."
                          BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="1" HorizontalAlignment="Stretch" Padding="20,16,-60,16" >
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Center">
                            <SymbolIcon Symbol="Clock" Margin="0,0,16,0" />
                            <TextBlock  Text="Match Timer"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="TimerToggleSwitch" Toggled="TimerToggled" HorizontalAlignment="Right" IsOn="True" />
                    </Grid>
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Height="72"
                          ToolTipService.ToolTip="Counts the number of spots taken during the game."
                          BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="1" HorizontalAlignment="Stretch" Padding="20,16,-60,16" >
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xf5ed;" Margin="0,0,16,0" />
                            <TextBlock Text="Spaces Info"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="SquaresInfoToggleSwitch" Toggled="SquaresInfoToggled" HorizontalAlignment="Right" IsOn="False" />
                    </Grid>
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Height="72"
                          ToolTipService.ToolTip="Displays the number of players in the game."
                          BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="1" HorizontalAlignment="Stretch" Padding="20,16,-60,16" >
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Center">
                            <SymbolIcon Symbol="Contact2" Margin="0,0,16,0" />
                            <TextBlock Text="Player Counter"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="PlayerCounterToggleSwitch" IsOn="True" Toggled="PlayerCounterToggled" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <Button Margin="0,16,0,32" Name="StartButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="StartButtonClick" >
            <StackPanel Padding="4,4,4,4" Orientation="Horizontal">
                <SymbolIcon Symbol="Play" Margin="0,0,8,0" />
                <TextBlock Text="Start Game"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
